# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	$launcher 
super + shift + d
	rofi -show drun
# browser
super + w
	$BROWSER

# lock screen
super + shift + l
	/home/ayman/.local/bin/lock

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# other programs
super + shift + w
	$TERMINAL -e nmtui
super + n
	$TERMINAL -e ncmpcpp
super + shift + n
	obsidian
super + shift + p
	passmenu
super + p
	pcmanfm
super + r
	alacritty -e ranger

# media keys
XF86AudioMute
	pamixer -t; kill -44 $(pidof dwmblocks)
XF86AudioRaiseVolume
	pamixer -i 5; kill -44 $(pidof dwmblocks)
XF86AudioLowerVolume
	pamixer -d 5; kill -44 $(pidof dwmblocks)
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next
XF86AudioPause
	playerctl play-pause
XF86AudioPlay
	playerctl play-pause
